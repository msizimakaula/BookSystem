@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .hero {
        background: url('~/images/book-bg.jpg') no-repeat center center;
        background-size: cover;
        padding: 120px 20px;
        text-align: center;
        color: rgba(3,4,4,0.5);
        position: relative;
    }

        .hero h1 {
            font-size: 3rem;
            font-weight: bold;
            text-shadow: 2px 2px 10px rgba(0,0,0,0.5);
        }

    .btn-animated {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn-animated:hover {
            transform: scale(1.1);
            box-shadow: 0px 5px 15px rgba(0,0,0,0.4);
        }

    .book-section {
        margin: 60px 0;
    }

    .book-card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .book-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 10px 20px rgba(0,0,0,0.2);
        }

        .book-card img {
            height: 250px;
            object-fit: cover;
        }
</style>

<div class="hero">
    <h1>Welcome To Sizzlar's BookClub 📚</h1>
    <p class="lead mt-3">Discover amazing books and place your order today!</p>
    <a class="btn btn-success btn-lg btn-animated mt-4" asp-controller="Order" asp-action="Create">
        Place Order
    </a>
</div>

<div class="container book-section">
    <h2 class="text-center mb-5">Featured Books</h2>
    <div class="row justify-content-center">
        <div class="col-md-3 mb-4">
            <div class="card book-card">
                <img src="/images/book1.jpg" class="card-img-top" alt="Book 1" />
                <div class="card-body text-center">
                    <h5 class="card-title">The Last Four Things</h5>
                    <p class="card-text">By Msizi Makaula</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card book-card">
                <img src="/images/book2.jpg" class="card-img-top" alt="Book 1" />
                <div class="card-body text-center">
                    <h5 class="card-title">Soul</h5>
                    <p class="card-text">By Olivia Wilson</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card book-card">
                <img src="/images/book3.jpg" class="card-img-top" alt="Book 1" />
                <div class="card-body text-center">
                    <h5 class="card-title">The Sum of All Things</h5>
                
                    <p class="card-text">By Nicole Brooks</p>
                </div>
            </div>
        </div>




