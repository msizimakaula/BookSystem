@model IEnumerable<BulkyBook.Models.Book>

<h2 class="mb-4">Available Books</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var book in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="~/images/book-placeholder.png" class="card-img-top" alt="@book.Title" style="height:250px; object-fit:cover;" />
                <div class="card-body">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text"><strong>Author:</strong> @book.Author</p>
                    <p class="card-text"><strong>Category:</strong> @book.Category?.Name</p>
                    @* <p class="card-text"><strong>Price:</strong> R@book.Price</p> *@
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Order" asp-action="Create" asp-route-bookId="@book.BookId" class="btn btn-primary">
                        Reserve a Book
                    </a>
                </div>
            </div>
        </div>
    }
</div>
