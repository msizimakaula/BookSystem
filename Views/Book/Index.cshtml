@model IEnumerable<BulkyBook.Models.Book>
@{
    ViewData["Title"] = "Books";
}

<h2>Books</h2>
<a asp-action="Create" class="btn btn-success mb-3">Add New Book</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Author</th>
            <th>Published Date</th>
            <th>Status</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.PublishedDate.ToString("yyyy-MM-dd")</td>
                <td>@book.Status</td>
                <td>@book.Category?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
