@model IEnumerable<Category>  //must be lowercase to fetch what is passed from the contoller
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4"> 
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Category
            </a>

        </div>
    </div>

    <br /><br />
    @if (ViewData["SearchResults"] != null)
    {
        <div class="alert alert-info">
            @ViewData["SearchResults"]
        </div>
    }
    @if (ViewData["NoResults"] != null)
    {
        <div class="alert alert-warning">
            @ViewData["NoResults"]
        </div>
    }


<table class="table table-boarded table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            

            <th>
                Display Order
            </th>
                <th>
                    Price
                </th>
                <th>
                    Total Price
                </th>
                 <th>
                    Status
                </th> 
            <th>

            </th>
        </tr>
    </thead>

    <tbody>

        @foreach(var obj in Model) // iterate thrigh all of properties use Model t access C# code directly

        {
            
            <tr>
                <td width="30%">
                    @obj.Name
                </td>
                   

                <td width="30%">
                    @obj.DisplayOrder
                </td>
                 <td width="30%">
                    @obj.Price
                   </td>
                    <td width="30%">
                        @obj.TotalPrice
                    </td>
                     <td width="30%">
                        @obj.Status
                    </td>

                <td>
                        <div class="w-75  btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>

                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash3"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>