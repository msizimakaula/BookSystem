@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BulkyBook</title>
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/BulkyBook.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">BookClub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="true" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse show" id="navbarColor02" style="">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @inject UserManager<Users> UserManager
                        @{
                            var currentUser = await UserManager.GetUserAsync(User);
                            var role = currentUser?.Role;
                        }
@* Only for Admin *@
                        @if (role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Category" asp-action="Index">Category Management</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Book" asp-action="Index">Books Management</a>
                            </li>
                        }

                        @* Only for Customer *@
                        @if (role == "Customer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="Orders">My Orders</a>
                            </li>
                        }

                        <partial name="_LoginPartial" /> @* to show login/logout/register links *@
             

                        @* <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </li> *@
                    </ul>

                    @* ASP- TO SEND IT TO CATEGORY ACTION *@
                     <form asp-controller="Category" asp-action="Index" method="get" class="d-flex">
                        <input id="searchBox" class="form-control me-sm-2" type="search"
                               name="searchString" placeholder="Search categories..."
                               value="@ViewData["CurrentFilter"]" />
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>

                    <script>
                    const searchBox = document.getElementById("searchBox");
                    searchBox.addEventListener("input", function () {
                    if (this.value === "") {
                    // If input is cleared, reload all categories
                    window.location.href = "/Category/Index";
                    }
                    });
                    </script> 

                </div>
            </div>
        </nav>

        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notifications" /> @* for all pop ups to be on on all pages*@
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted bg-dark">
        <div class="container">
            &copy; 2025 - BulkyBook - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.min.js" integrity="sha384-7qAoOXltbVP82dhxHAUje59V5r2YsVfBafyUDxEdApLPmcdhBPg1DKg1ERo0BZlK" crossorigin="anonymous"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
